<h1 class="mb-1 restaurant-show-title">編輯餐廳 - {{restaurantData.name}}</h1>
<div class="container">
  <form action="/restaurants/{{restaurantData._id}}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">店名<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="餐廳"
        name="name"
        value="{{restaurantData.name}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">英文店名<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="name_en"
        placeholder="restaurant"
        name="name_en"
        value="{{restaurantData.name_en}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">分類<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="category"
        placeholder="分類"
        name="category"
        value="{{restaurantData.category}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片<span class="text-danger">*</span></label>
      <input
        type="url"
        class="form-control"
        id="image"
        placeholder="圖片"
        name="image"
        value="{{restaurantData.image}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="location"
        placeholder="地址"
        name="location"
        value="{{restaurantData.location}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="phone"
        placeholder="電話"
        name="phone"
        value="{{restaurantData.phone}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">google地圖連結<span class="text-danger">*</span></label>
      <input
        type="url"
        class="form-control"
        id="google_map"
        placeholder="google地圖連結"
        name="google_map"
        value="{{restaurantData.google_map}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="rating"
        placeholder="評分"
        name="rating"
        value="{{restaurantData.rating}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">敘述<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="description"
        placeholder="敘述"
        name="description"
        value="{{restaurantData.description}}"
        required
      />
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">儲存並修改</button>
    </div>
  </form>
</div>